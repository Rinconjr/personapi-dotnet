<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - personapi_dotnet</title>

    <!-- Google Fonts (Poppins) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Navbar Brand (Enlace directo a Home/Index) -->
                <a class="navbar-brand" href="http://localhost:5109/home/index">personapi_dotnet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home Link (redirige a http://localhost:5109/home/index) -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://localhost:5109/home/index">Home</a>
                        </li>
                        <!-- Estudios Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Estudios" asp-action="Index">Estudios</a>
                        </li>
                        <!-- Personas Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Personas" asp-action="Index">Personas</a>
                        </li>
                        <!-- Profesion Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Profesion" asp-action="Index">Profesion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Telefonos" asp-action="Index">Telefono</a>
                        </li>
                        <!-- API Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="http://localhost:5109/index.html">API</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - personapi_dotnet - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts personalizados -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Validación de formularios -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
