@model personapi_dotnet.Models.Entities.Telefono

@{
    ViewData["Title"] = "Editar Teléfono";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Editar Teléfono</h2>
                </div>
                <div class="card-body">
                    <!-- Formulario para editar teléfono -->
                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Num" />

                        <div class="form-group">
                            <label asp-for="Oper" class="control-label"></label>
                            <input asp-for="Oper" class="form-control border-primary rounded" />
                            <span asp-validation-for="Oper" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Duenio" class="control-label"></label>
                            <select asp-for="Duenio" class="form-control border-primary rounded" asp-items="ViewBag.Duenio"></select>
                            <span asp-validation-for="Duenio" class="text-danger"></span>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4 py-2">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Validación del lado del cliente -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
