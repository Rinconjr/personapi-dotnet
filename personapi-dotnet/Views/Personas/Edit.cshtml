@model personapi_dotnet.Models.Entities.Persona

@{
    ViewData["Title"] = "Editar Persona";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Editar Persona</h2>
                </div>
                <div class="card-body">
                    <!-- Formulario para editar persona -->
                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Cc" />

                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control border-primary rounded" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control border-primary rounded" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <!-- Campo Género con select -->
                        <div class="form-group">
                            <label asp-for="Genero" class="control-label"></label>
                            <select asp-for="Genero" class="form-control border-primary rounded" required>
                                <option value="">-- Seleccione Género --</option>
                                <option value="M" selected="@(Model.Genero == "M")">Masculino</option>
                                <option value="F" selected="@(Model.Genero == "F")">Femenino</option>
                            </select>
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Edad" class="control-label"></label>
                            <input asp-for="Edad" class="form-control border-primary rounded" />
                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4 py-2">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Validación del lado del cliente -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
