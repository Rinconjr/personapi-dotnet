@model personapi_dotnet.Models.Entities.Estudio

@{
    ViewData["Title"] = "Editar Estudio";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Editar Estudio</h2>
                </div>
                <div class="card-body">
                    <!-- Formulario para editar estudio -->
                    <form asp-action="Edit" method="post" novalidate>
                        <div class="form-group">
                            <label for="IdProf">Id Profesión</label>
                            <input type="number" asp-for="IdProf" class="form-control border-primary rounded" id="IdProf" readonly aria-readonly="true" />
                            <span asp-validation-for="IdProf" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="CcPer">Cédula Persona</label>
                            <input type="number" asp-for="CcPer" class="form-control border-primary rounded" id="CcPer" readonly aria-readonly="true" />
                            <span asp-validation-for="CcPer" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Fecha">Fecha</label>
                            <input type="date" asp-for="Fecha" class="form-control border-primary rounded" id="Fecha" required aria-required="true" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Univer">Universidad</label>
                            <input type="text" asp-for="Univer" class="form-control border-primary rounded" id="Univer" maxlength="100" required aria-required="true" />
                            <span asp-validation-for="Univer" class="text-danger"></span>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4 py-2">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Validación del lado del cliente -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
